<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="inherit_id" ref="base_report_info.view_company_form" />
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='report_info']" position="inside">
                <group>
                    <field name="seller_settlement_report_title" />
                    <field name="seller_settlement_report_debit_comment" />
                    <field name="seller_settlement_report_credit_comment" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
